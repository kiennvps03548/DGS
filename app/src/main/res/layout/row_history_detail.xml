<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandablelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_15"
        android:paddingBottom="@dimen/space_15"
        android:paddingLeft="@dimen/space_5"
        android:paddingRight="@dimen/space_5"
        android:weightSum="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.daniribalbert.customfontlib.views.CustomFontTextView
            android:id="@+id/txt_name_history_detal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Counter"
            android:textSize="@dimen/font_48"
            app:font="Roboto_Thin"
            android:textColor="@color/black" />

        <com.daniribalbert.customfontlib.views.CustomFontTextView
            android:id="@+id/txt_value_history_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1.5"
            android:text="50"
            android:textSize="@dimen/font_66"
            app:font="Roboto_Thin"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorNavigationbarLine" />
</LinearLayout>