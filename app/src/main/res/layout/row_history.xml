<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_12"
        android:orientation="vertical"
        android:padding="@dimen/space_13">

     <com.daniribalbert.customfontlib.views.CustomFontTextView
         android:id="@+id/txt_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/txt_item_view_detail"
         android:textColor="@color/color_black24"
         android:textSize="@dimen/font_48"
         app:font="Roboto_Light" />

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

         <com.daniribalbert.customfontlib.views.CustomFontTextView
             android:id="@+id/txt_value"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="HÃ´m nay"
             android:textColor="@color/color_black24"
             android:textSize="@dimen/font_42"
             app:font="Roboto_Regular" />

         <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:id="@+id/text_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_name"
                android:layout_toLeftOf="@+id/text_time"
                android:text=" - "
                android:textColor="@color/color_black24"
                android:textSize="@dimen/font_48"
                app:font="Roboto_Medium" />

            <com.daniribalbert.customfontlib.views.CustomFontTextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_name"
                android:layout_alignParentRight="true"
                android:text="21:45"
                android:textColor="@color/color_black24"
                android:textSize="@dimen/font_42"
                app:font="Roboto_Light" />
        </LinearLayout>
</LinearLayout>
